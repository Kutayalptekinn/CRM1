@model CRM.ViewModels.Admin.LoginViewModel

@using (Html.BeginForm("Create", "Users", new { Area = String.Empty }, FormMethod.Post, new { autocomplete = "off" }))
{
    <div class="form-horizontal">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(Model => Model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(Model => Model.UserName, new { autocomplete = "off" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(Model => Model.Password, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="row">

            @for (int i = 0; i < Model.Roles.Count(); i++)
            {
                <div class="col-md-3">
                    @Html.HiddenFor(m => Model.Roles[i].Id)
                    <div class="form-group">
                        @Html.Label(Model.Roles[i].RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.CheckBoxFor(m => Model.Roles[i].Checked)
                    </div>
                </div>
            }
        </div>








        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

