@model CRM.ViewModels.Admin.RoleAddViewModel



@using (Html.BeginForm("CreateRole", "Users", new { Area = String.Empty }, FormMethod.Post))
{


    <div class="form-horizontal">
        

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    

        <div class="form-group">
            @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(Model => Model.Role, ViewBag.Alphabet as SelectList, "Select Role", new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.Role, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
