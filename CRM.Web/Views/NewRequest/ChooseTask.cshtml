
@using CRM.ViewModels.Admin
@model List<EmptyAssignToNewRequestListViewModel>
@using (Html.BeginForm("EmptyAssignToNewRequestAdd", "NewRequest", new { Area = String.Empty }, FormMethod.Post, new { id = "NewRequestAddForm", role = "form" }))
{

    <div class="table-responsive">
        <table class="table no-margin">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Request</th>
                    <th>Description</th>
                    <th>Priority</th>
                    <th>RequestorName</th>
                    <th>AssignTo</th>
                    <th>Deadline</th>

                    <th>Start</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (EmptyAssignToNewRequestListViewModel empty in Model)
                    {
                        Html.RenderPartial("RenderPartial", empty);

                    } 
            </tbody>
        </table>
    </div>



    <div class="form-group form-group-sm row">
        <div class="col-xs-12">
            <button type="submit" class="btn btn-primary pull-right margin-left10"><span class="fa fa-check"></span>&nbsp;&nbsp;Kaydet</button>
            <button class="btn btn-danger pull-right" type="button" data-dismiss="modal"><span class="fa fa-times"></span>&nbsp;&nbsp;İptal</button>
        </div>
    </div>
    <div class="clearfix"></div>
}

